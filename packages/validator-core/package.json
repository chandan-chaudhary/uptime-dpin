{
    "name": "@uptime-dpin/validator-core",
    "version": "1.0.0",
    "private": true,
    "description": "Browser-optimized validator for mobile and desktop web",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --clean",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "check-types": "tsc --noEmit"
    },
    "dependencies": {
        "@common/index": "*",
        "ethers": "^6.15.0"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "tsup": "^8.0.1",
        "typescript": "^5.9.2"
    }
}