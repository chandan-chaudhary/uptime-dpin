generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WebsiteStatus {
  Good
  Bad
}

enum InvoiceStatus {
  Pending
  Paid
  Failed
  Refunded
}

enum TxKind {
  Payment
  Payout
  Fee
  Other
}

enum TxStatus {
  Pending
  Confirmed
  Failed
  Reverted
}

enum PayoutStatus {
  Pending
  Processing
  Completed
  Failed
  Cancelled
}

enum LedgerType {
  Credit
  Debit
  Fee
  Refund
  Payout
}

model User {
  id            String        @id @default(uuid()) @db.Uuid
  clerkId       String        @unique // Clerk user ID for mapping
  email         String        @unique
  password      String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  websites      Website[]
  invoice       Invoice[]
  ledgerEntries LedgerEntry[]
}

model Website {
  id        String        @id @default(uuid()) @db.Uuid
  url       String
  userId    String        @db.Uuid
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  ticks     WebsiteTick[]
  disabled  Boolean       @default(false)

  @@index([userId])
}

model Validator {
  id            String        @id @default(uuid()) @db.Uuid
  publicKey     String        @unique
  ipAddress     String
  location      String
  pendingPayout Int           @default(0)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  ticks         WebsiteTick[]
  payouts       Payout[]
}

model WebsiteTick {
  id          String        @id @default(uuid()) @db.Uuid
  websiteId   String        @db.Uuid
  website     Website       @relation(fields: [websiteId], references: [id], onDelete: Cascade)
  validatorId String        @db.Uuid
  validator   Validator     @relation(fields: [validatorId], references: [id], onDelete: Cascade)
  timestamp   DateTime      @default(now())
  status      WebsiteStatus
  latency     Float
  createdAt   DateTime      @default(now())

  @@index([websiteId])
  @@index([validatorId])
  @@index([timestamp])
}

model Invoice {
  id              String        @id @default(uuid()) @db.Uuid
  userId          String        @db.Uuid
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount          Decimal       @db.Decimal(30, 6)
  currency        String        @default("ETH")
  status          InvoiceStatus @default(Pending)
  paidAt          DateTime?
  txHash          String? // on-chain tx hash if paid on-chain
  metadata        Json? // free-form (plan, period, notes)
  createdAt       DateTime      @default(now())
  paidByPublicKey String? // The public key that paid this invoice

  @@index([userId])
}

model OnchainTransaction {
  id          String   @id @default(uuid()) @db.Uuid
  txHash      String   @unique
  from        String
  to          String
  value       Decimal  @db.Decimal(30, 6)
  currency    String   @default("ETH")
  kind        TxKind // payment | payout | fee | other
  status      TxStatus @default(Pending)
  blockHash   String?
  blockNumber Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Payout {
  id          String       @id @default(uuid()) @db.Uuid
  validatorId String       @db.Uuid
  validator   Validator    @relation(fields: [validatorId], references: [id], onDelete: Cascade)
  amount      Decimal      @db.Decimal(30, 6)
  currency    String       @default("ETH")
  status      PayoutStatus @default(Pending)
  requestedAt DateTime     @default(now())
  processedAt DateTime?
  txHash      String?
  note        String?
}

model LedgerEntry {
  id        String     @id @default(uuid()) @db.Uuid
  publicKey String // The payer's public key
  userId    String?    @db.Uuid
  user      User?      @relation(fields: [userId], references: [id])
  amount    Decimal    @db.Decimal(30, 6)
  currency  String     @default("ETH")
  type      LedgerType
  reference String? // invoice id, payout id, tx id, etc
  metadata  Json?
  createdAt DateTime   @default(now())
}
