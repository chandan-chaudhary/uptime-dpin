generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  clerkId   String    @unique // Clerk user ID for mapping
  email     String    @unique
  password  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  websites  Website[]
}

model Website {
  id        String        @id @default(uuid()) @db.Uuid
  url       String
  userId    String        @db.Uuid
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  ticks     WebsiteTick[]
  disabled  Boolean       @default(false)

  @@index([userId])
}

model Validator {
  id            String        @id @default(uuid()) @db.Uuid
  publicKey     String        @unique
  ipAddress     String
  location      String
  pendingPayout Int           @default(0)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  ticks         WebsiteTick[]
}

model WebsiteTick {
  id          String        @id @default(uuid()) @db.Uuid
  websiteId   String        @db.Uuid
  website     Website       @relation(fields: [websiteId], references: [id], onDelete: Cascade)
  validatorId String        @db.Uuid
  validator   Validator     @relation(fields: [validatorId], references: [id], onDelete: Cascade)
  timestamp   DateTime      @default(now())
  status      WebsiteStatus
  latency     Float
  createdAt   DateTime      @default(now())

  @@index([websiteId])
  @@index([validatorId])
  @@index([timestamp])
}

enum WebsiteStatus {
  Good
  Bad
}
