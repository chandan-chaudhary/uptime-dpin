{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "ignoreDeprecations": "5.0",
    // "baseUrl": ".",
    "paths": {
      "@common/*": [
        "../../packages/common/*"
      ]
    }
  },
  "include": [
    "src/validator.ts",
    "src/cli.ts",
    "src/**/*",
    "../../packages/common/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}