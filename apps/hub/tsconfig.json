{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../..",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "ignoreDeprecations": "5.0",
    "paths": {
      "@common/*": ["../../packages/common/*"]
    }
  },
  "include": ["**/*", "hub.ts", "../../packages/common/**/*"],
  "exclude": ["node_modules", "dist"]
}
